{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "../../src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "lib": ["ESNext"],
        "listEmittedFiles": true,
        "moduleResolution": "node",
        "newLine": "lf",
        "noImplicitOverride": false,
        "noImplicitReturns": true,
        "rootDir": "../../src",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        /**
         * The following options will be thruned on if option `--strict` is set:
         * - alwaysStrict
         * - noImplicitAny
         * - noImplicitThis
         * - strictBindCallApply
         * - strictFunctionTypes
         * - strictNullChecks
         * - strictPropertyInitialization
         * - useUnknownInCatchVariable
         */
        "strict": true,
        "target": "ES2018"
    },
    "include": ["../../src"],
    "exclude": [
        "../../build",
        "../../node_modules",
        "../../src/**/__tests__",
        "../../src/**/*.spec.ts",
        "../../src/**/*.test.ts"
    ]
}
