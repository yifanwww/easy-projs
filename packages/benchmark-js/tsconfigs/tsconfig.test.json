{
    "extends": "@easy/tsconfigs/tsconfig.node.json",
    "compilerOptions": {
        "outDir": "../dist",
        "rootDir": "..",
        "sourceMap": false
    },
    "include": ["../src/**/*", "../test/**/*"],
    "exclude": [
        "../src/**/__tests__/**/*",
        "../src/**/*.spec.ts",
        "../src/**/*.spec.tsx",
        "../src/**/*.test.ts",
        "../src/**/*.test.tsx",
        "../src/test.setup.ts"
    ]
}
