{
    "extends": "@easy-config/tsconfigs/tsconfig.node.base.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "../lib",
        "rootDir": "../src"
    },
    "include": ["../src/**/*"],
    "exclude": [
        "../src/**/__mocks__/**/*",
        "../src/**/__tests__/**/*",
        "../src/**/*.spec.ts",
        "../src/**/*.test.ts",
        "../src/test.setup.ts"
    ]
}
