{
    "extends": "@package/tsconfigs/tsconfig.node.json",
    "compilerOptions": {
        "baseUrl": "../../src",
        "declaration": true,
        "declarationDir": "../../lib",
        "emitDeclarationOnly": true,
        "module": "ESNext",
        "removeComments": false,
        "rootDir": "../../src",
        "tsBuildInfoFile": "./tsconfig.types.tsbuildinfo"
    },
    "include": ["../../src"],
    "exclude": [
        "../../build",
        "../../node_modules",
        "../../src/**/__tests__",
        "../../src/**/*.spec.ts",
        "../../src/**/*.test.ts"
    ]
}
