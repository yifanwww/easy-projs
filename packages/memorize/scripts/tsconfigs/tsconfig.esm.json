{
    "extends": "@config/tsconfigs/tsconfig.node.json",
    "compilerOptions": {
        "baseUrl": "../../src",
        "module": "ESNext",
        "outDir": "../../lib",
        "rootDir": "../../src",
        "tsBuildInfoFile": "./tsconfig.esm.tsbuildinfo"
    },
    "include": ["../../src"],
    "exclude": [
        "../../build",
        "../../node_modules",
        "../../src/**/__tests__",
        "../../src/**/*.spec.ts",
        "../../src/**/*.test.ts"
    ]
}
