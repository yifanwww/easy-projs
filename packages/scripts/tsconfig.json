{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "lib": ["ESNext"],
        "listEmittedFiles": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "newLine": "lf",
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "outDir": ".",
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDir": ".",
        "skipLibCheck": false,
        "sourceMap": false,
        /**
         * The following options will be thruned on if option `--strict` is set:
         * - alwaysStrict
         * - noImplicitAny
         * - noImplicitThis
         * - strictBindCallApply
         * - strictFunctionTypes
         * - strictNullChecks
         * - strictPropertyInitialization
         * - useUnknownInCatchVariable
         */
        "strict": true,
        "target": "ES2018"
    },
    "include": ["."],
    "exclude": []
}
