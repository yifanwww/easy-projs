{
    "name": "@easy-pkg/helpers-react",
    "version": "0.1.0",
    "description": "A package that contains React helpers.",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "typings": "lib/index.d.ts",
    "homepage": "https://github.com/yifanwww/easy-projs#readme",
    "license": "MIT",
    "author": "yifanwww <yifanw1101@gmail.com> (https://github.com/yifanwww)",
    "bugs": {
        "url": "https://github.com/yifanwww/easy-projs/issues"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yifanwww/easy-projs.git",
        "directory": "packages/helpers-react"
    },
    "scripts": {
        "build": "concurrently -n esm,types \"pnpm run build:esm\" \"pnpm run build:types\"",
        "build:esm": "tsc --project tsconfigs/tsconfig.esm.json",
        "build:types": "tsc --project tsconfigs/tsconfig.types.json",
        "clean": "rimraf --glob lib tsconfigs/*.tsbuildinfo",
        "dev": "pnpm run build:esm --watch",
        "format": "prettier --write \"**/*.{cjs,css,html,js,jsx,mjs,json,less,scss,ts,tsx,yaml,yml}\"",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "pre-commit": "lint-staged",
        "typecheck": "tsc --project tsconfig.json --noEmit --incremental false"
    },
    "dependencies": {
        "@easy-pkg/utils-type": "workspace:*",
        "immer": "^9.0.21",
        "react": "^18.2.0"
    },
    "devDependencies": {
        "@easy-config/eslint-config": "workspace:*",
        "@easy-config/global-types": "workspace:*",
        "@easy-config/scripts": "workspace:*",
        "@easy-config/tsconfigs": "workspace:*",
        "@types/react": "^18.2.15",
        "concurrently": "^7.6.0",
        "eslint": "^8.44.0",
        "lint-staged": "^13.2.3",
        "prettier": "2.8.0",
        "rimraf": "^5.0.1",
        "typescript": "5.1.3"
    }
}
