{
    "name": "@easy-proj/misc-scripts",
    "version": "0.0.0",
    "description": "Misc scripts.",
    "type": "module",
    "homepage": "https://github.com/yifanwww/easy-projs#readme",
    "license": "MIT",
    "author": "yifanwww <yifanw1101@gmail.com> (https://github.com/yifanwww)",
    "bugs": {
        "url": "https://github.com/yifanwww/easy-projs/issues"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yifanwww/easy-projs.git",
        "directory": "projects/misc-scripts"
    },
    "scripts": {
        "build": "tsc --project tsconfig.node.json",
        "clean": "rimraf --glob coverage dist *.tsbuildinfo",
        "dev": "tsc --project tsconfig.node.json --watch",
        "format": "prettier --write \"**/*.{cjs,cts,css,html,js,jsx,mjs,mts,json,less,scss,ts,tsx,yaml,yml}\"",
        "lint": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint .",
        "lint-fix": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint . --fix",
        "typecheck": "tsc --project tsconfig.json --noEmit --incremental false"
    },
    "dependencies": {
        "@easy-pkg/types": "workspace:^",
        "semver": "catalog:"
    },
    "devDependencies": {
        "@easy-config/eslint-config": "workspace:^",
        "@easy-config/global-types": "workspace:^",
        "@easy-config/tsconfigs": "workspace:^",
        "@types/node": "catalog:",
        "@types/semver": "catalog:",
        "cross-env": "catalog:",
        "eslint": "catalog:",
        "prettier": "catalog:",
        "rimraf": "catalog:",
        "typescript": "catalog:"
    }
}
