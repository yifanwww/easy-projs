{
    "name": "@easy-proj/template-nodejs",
    "version": "0.0.0",
    "description": "A template project used for creating new nodejs projects.",
    "main": "build/index.js",
    "homepage": "https://github.com/yifanwww/easy-projs#readme",
    "license": "MIT",
    "author": "yifanwww <yifanw1101@gmail.com> (https://github.com/yifanwww)",
    "bugs": {
        "url": "https://github.com/yifanwww/easy-projs/issues"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yifanwww/easy-projs.git",
        "directory": "projects/template-proj-nodejs"
    },
    "scripts": {
        "app": "node build/index.js",
        "build": "tsc --project tsconfig.node.json",
        "clean": "rimraf build ./*.tsbuildinfo",
        "dev": "pnpm run build --watch",
        "format": "prettier --write \"**/*.{cjs,css,html,js,jsx,mjs,json,less,scss,ts,tsx,yaml,yml}\"",
        "lint": "eslint .",
        "pre-commit": "lint-staged",
        "typecheck": "tsc --project tsconfig.json --noEmit"
    },
    "dependencies": {
        "chalk": "^4.1.2"
    },
    "devDependencies": {
        "@easy-config/eslint-config": "workspace:*",
        "@easy-config/global-types": "workspace:*",
        "@easy-config/scripts": "workspace:*",
        "@easy-config/tsconfigs": "workspace:*",
        "@easy-pkg/utils-test": "workspace:*",
        "@types/node": "^18.16.19",
        "eslint": "^8.44.0",
        "lint-staged": "^13.2.3",
        "prettier": "2.8.0",
        "rimraf": "^3.0.2",
        "typescript": "5.1.3"
    }
}
