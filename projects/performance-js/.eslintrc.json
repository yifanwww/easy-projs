{
    "root": true,
    "extends": "@easy-config/eslint-config/.eslintrc.node.js",
    "ignorePatterns": ["/coverage", "/dist", "*.cjs", "*.js", "*.mjs"],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "settings": {
        "typescript": {
            "project": "./tsconfig.json"
        }
    },
    "rules": {
        "no-console": "off",
        "prefer-const": "off",

        "@typescript-eslint/no-unused-expressions": "off",
        "@typescript-eslint/no-unused-vars": "off"
    }
}
