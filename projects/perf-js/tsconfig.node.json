{
    "extends": "@easy-config/tsconfigs/tsconfig.node.json",
    "compilerOptions": {
        "outDir": "build",
        "rootDir": "src",
        "sourceMap": false
    },
    "include": ["src/**/*"],
    "exclude": [
        "../src/**/__tests__/**/*",
        "../src/**/*.spec.ts",
        "../src/**/*.spec.tsx",
        "../src/**/*.test.ts",
        "../src/**/*.test.tsx",
        "../src/setup.tests.ts"
    ]
}
