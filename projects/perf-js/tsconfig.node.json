{
    "extends": "@easy-config/tsconfigs/tsconfig.node.json",
    "compilerOptions": {
        "inlineSources": false,
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": false
    },
    "include": ["src/**/*"],
    "exclude": [
        "src/**/__mocks__/**/*",
        "src/**/__tests__/**/*",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/test.setup.ts"
    ]
}
