{
    "root": true,
    "extends": "@easy-config/eslint-config/.eslintrc.basic.js",
    "ignorePatterns": ["/build", "*.cjs", "*.js", "*.mjs"],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "prefer-const": "off",

        "@typescript-eslint/no-unused-expressions": "off",
        "@typescript-eslint/no-unused-vars": "off"
    }
}
