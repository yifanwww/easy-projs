{
    "name": "@easy-config/scripts",
    "version": "0.0.0",
    "description": "Scripts for easy-projs.",
    "type": "module",
    "homepage": "https://github.com/yifanwww/easy-projs#readme",
    "license": "MIT",
    "author": "yifanwww <yifanw1101@gmail.com> (https://github.com/yifanwww)",
    "bugs": {
        "url": "https://github.com/yifanwww/easy-projs/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yifanwww/easy-projs.git",
        "directory": "configs/scripts"
    },
    "bin": {
        "jest": "./node_modules/jest/bin/jest.js",
        "unit-test": "./bin/unit-test.js"
    },
    "scripts": {
        "build-scripts": "tsc --project tsconfigs/tsconfig.build.json",
        "clean-scripts": "rimraf --glob dist tsconfigs/*.tsbuildinfo",
        "dev": "pnpm run build-scripts --watch",
        "format": "prettier --write \"**/*.{cjs,css,html,js,jsx,mjs,json,less,scss,ts,tsx,yaml,yml}\"",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "pre-commit": "lint-staged",
        "typecheck": "tsc --project tsconfig.json --noEmit --incremental false"
    },
    "dependencies": {
        "@babel/preset-typescript": "^7.22.5",
        "babel-jest": "^29.6.0",
        "babel-preset-react-app": "^10.0.1",
        "camelcase": "^6.3.0",
        "chalk": "^4.1.2",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.6.0",
        "jest-environment-jsdom": "^29.6.0",
        "jest-resolve": "^29.6.0",
        "jest-watch-typeahead": "^2.2.2",
        "react-app-polyfill": "^3.0.0"
    },
    "devDependencies": {
        "@easy-config/eslint-config": "workspace:*",
        "@easy-config/tsconfigs": "workspace:*",
        "@jest/types": "^29.6.0",
        "@types/node": "^18.16.19",
        "eslint": "^8.44.0",
        "lint-staged": "^13.2.3",
        "prettier": "2.8.0",
        "rimraf": "^5.0.1",
        "typescript": "5.1.3"
    }
}
