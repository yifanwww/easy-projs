{
    "name": "@easy-config/scripts",
    "version": "0.0.0",
    "description": "Scripts for easy-projs.",
    "homepage": "https://github.com/yifanwww/easy-projs#readme",
    "license": "MIT",
    "author": "yifanwww <yifanw1101@gmail.com> (https://github.com/yifanwww)",
    "bugs": {
        "url": "https://github.com/yifanwww/easy-projs/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yifanwww/easy-projs.git",
        "directory": "configs/scripts"
    },
    "bin": {
        "react-proj": "./bin/react-proj.js",
        "unit-test": "./bin/unit-test.js"
    },
    "scripts": {
        "build-scripts": "tsc --project tsconfig.json",
        "clean-scripts": "rimraf dist tsconfig.tsbuildinfo",
        "dev": "pnpm run build-scripts --watch",
        "format": "prettier --write \"**/*.{cjs,css,html,js,jsx,mjs,json,less,scss,ts,tsx,yaml,yml}\"",
        "lint": "eslint .",
        "pre-commit": "lint-staged",
        "typecheck": "tsc --project tsconfig.json --noEmit"
    },
    "dependencies": {
        "camelcase": "^6.3.0",
        "chalk": "^4.1.2"
    },
    "devDependencies": {
        "@easy-config/eslint-config": "workspace:*",
        "@easy-config/tsconfigs": "workspace:*",
        "@jest/types": "^27.5.1",
        "eslint": "^8.24.0",
        "lint-staged": "^13.0.3",
        "prettier": "2.8.0",
        "rimraf": "^3.0.2",
        "typescript": "4.8.3"
    }
}
