{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": false,
        "isolatedModules": true,
        "lib": ["ESNext"],
        "listEmittedFiles": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": false,
        "sourceMap": true,
        /**
         * The following options will be thruned on if option `--strict` is set:
         * - alwaysStrict
         * - noImplicitAny
         * - noImplicitThis
         * - strictBindCallApply
         * - strictFunctionTypes
         * - strictNullChecks
         * - strictPropertyInitialization
         * - useUnknownInCatchVariable
         */
        "strict": true,
        "target": "ES2018"
    }
}
